<h1>Listado de alumnos</h1>
<h1></h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Dni</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @alumnos.each do |alumno| %>
      <tr>
        <td><%= alumno.nombre %></td>
        <td><%= alumno.apellido %></td>
        <td><%= alumno.dni %></td>
        <td><%= alumno.telefono %></td>
        <td><%= alumno.direccion %></td>
        <td><%= link_to 'Mostrar', alumno %></td>
        <td><%= link_to 'Editar', edit_alumno_path(alumno) %></td>
        <td><%= link_to 'Borrar', alumno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Expedientes', listar_expedientes_alumno_path(alumno) %></td>
        


          
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Alumno', new_alumno_path %> <br>
<%= link_to 'Atras', root_path %>
